        <Button Content="Сотрудник" HorizontalAlignment="Center" Margin="0,177,0,0" VerticalAlignment="Top" Width="322" Height="60" Background="White" FontSize="24" Click="Button_Click"/>
        <Button Content="Клиент" HorizontalAlignment="Center" Margin="0,269,0,0" VerticalAlignment="Top" Width="322" Height="60" Background="White" FontSize="24" Click="Button_Click_1"/>
